@model IEnumerable<ShoppingCart.Models.Shoppingcart>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <br />
    <br />
    <br />

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" />
    <title>Index</title>
    <link href="~/css/StyleSheet1.css" rel="stylesheet" />
    
</head>

<body>
   
    

    <h2 id="Cartheader"> LUXURY WATCHES SHOPPING CART</h2>
  <hr />
    <p id="toplinks">
        @Html.ActionLink("Add New Items", "Create","items")
    </p>
    <p id="toplinks">@Html.ActionLink("Empty All Shopping Cart Items", "AllDelete")</p> 


    <p id="toplinks"><a href= @Url.Action("Create", "Orders")>Checkout</a></p>

    @Html.AntiForgeryToken()
   
    <br />
    <br />
    <br />
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Price)
            </td>
           @* @if (User.IsInRole("Admin")) {*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
  
    </table>
   
    <h5> Subtotal</h5>

    @ViewBag.total

    @section scripts{
        @*<script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>*@
        <!--DataTables-->
        <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>

        <script>
           $('.table').DataTable();
        </script>
    }

</body>
</html>
